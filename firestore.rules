rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for tidbits
    match /tidbits/{document=**} {
      // Allow anyone to read tidbits (public feed)
      allow read: if true;
      // Allow authenticated users to write tidbits
      allow write: if request.auth != null;
    }

    // Rules for dailyFeed
    match /dailyFeed/{userId} {
      // Allow authenticated users to read and write their own daily feed
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for connections
    match /connections/{userId} {
      // Allow authenticated users to read and write their own connections
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for updateTimes
    match /updateTimes/{userId} {
      // Allow authenticated users to read and write their own update times
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}